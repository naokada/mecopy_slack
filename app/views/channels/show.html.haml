.wrapper.flex
  .left
    .left__info.header
      %h3 UZEMI
      = fa_icon("angle-down")
      = fa_icon("bell")
      .left__info__user
        = fa_icon("circle")
        %p naokada
    .left__threads
    .left__channels.groups
      #channels.groups__title
        %p.hover-white チャンネル
        = fa_icon("plus-circle")
      %ul.groups__list
        - @channels.each do |channel|
          - if channel.id == @channel.id
            %li.selected_channel
              = link_to("# #{channel.name}", channel_path(channel.id))
          - else
            %li
              = link_to("# #{channel.name}", channel_path(channel.id))
    .left__directs.groups
      #directs.groups__title
        %p.hover-white ダイレクトメッセージ
        = fa_icon("plus-circle")
      %ul.groups__list
        %li
          %a #{fa_icon("circle")} slackbot
        %li
          %a #{fa_icon("circle")} naokada
    .left__apps.groups
      .groups__title
        %p.hover-white App
        = fa_icon("plus-circle")
  .main
    .main__header.header.flex
      .main__header__left
        .main__header__left__title
          %h3 ##{@channel.name}
          %ul.channel_small_info_list
            %li #{fa_icon("star")}
            %li #{fa_icon("user")} 1
            %li #{fa_icon("thumb-tack")} 1
            %li #{fa_icon("pencil")} トピックの追加
        .main__header__info
      .main__header__right.flex
        .nav
          = fa_icon("ellipsis-v")
        = fa_icon("star")
        = fa_icon("at")
        .search-box-btn
          = fa_icon("search")
          %p 検索
        .nav
          = fa_icon("cog")
          .nav__contents
            %ul
              %li.item
                %a Jump to date...
              %li.item
                %a Invite new members to join...
              %li.item
                %a View channel details
              %li.item
                %a Addtional options...
              %li.list_divider
              %li.item
                %a Notification preferences...
              %li.item
                %a Mute ##{@channel.name}
              %li.list_divider
              %li.item
                %a Add an app
              %li.list_divider
              %li.item
                = button_to "Leave ##{@channel.name}", unparticipate_channel_path(@channel.id), method: :delete, class: "button-to-link"
                -# = link_to("Leave ##{@channel.name}", unparticipate_channel_path(@channel.id), method: :delete)
        = fa_icon("info-circle")
        = fa_icon("phone")
    = render 'flash'
    #messages.main__field.flex{"data-channel_id": "#{@channel.id}"}
      - @grouped_contents.keys.each do |date|
        - @grouped_contents[date].each do |content|
          - if content.content_type == "Message"
            = render partial: "messages/message", locals: { message: content.content }
          - elsif content.content_type == "ChannelUser"
            = render partial: "participation", locals: { channel_user: content.content }
        .divider
          %hr.divider__line
          %p.divider__label #{date}
    = render 'form'
    = render 'participate'
= render 'channels'
